  <form method="post" action="/auth/signup">
    <div>
      <label for="name">Prénom</label>
      <input name="name" id="name" type="text" class="input-text input" placeholder="Mireille" value="{{name}}" required>
    </div>
    <div >
      <label for="email" >Email</label>
      <input name="email" id="email" type="email" class="input-text input" placeholder="yoyo@gmail.com" value="{{email}}" required >
    </div>
    <div >
      <label for="password">Password</label>
      <input name="password" id="password" type="password" placeholder="••••••" value="{{password}}" required>
    </div>
        <div >
      <label for="cp">Code Postal</label>
      <input name="cp" id="cp" type="number" placeholder="75011"  value="{{cp}}" required>
    </div>
    <button>Valider mes informations</button>
  </form>
</section>