<h2 class="form-header">Liste des recettes</h2>

<ul class="allrecipes">
  {{#each recipe}}
  <div class="recipe-box-shadow">
  <li>
    <div class="recipe-container-box">
      <a href="/recipes/recipe-detail/{{this._id}}"><img
          src="{{this.image}}"
          alt="image-recette"
        /></a>
      <ul>
        <li ><h2>{{this.title}}</h2></li>
        <li ><i class="far fa-clock list-title"></i> {{this.duration}} minutes</li>
        <li ><i class="fas fa-euro-sign list-title"></i> {{this.price}}</li>
        <li ><i class="fas fa-sort-amount-up list-title"></i>Difficult√© {{this.level}}</li>
        <div class="padding-link"><a class="link-voir-recette" href="/recipes/recipe-detail/{{this._id}}">Voir la recette</a>
    </div>
    </ul>
  </li>
  </div>
  {{/each}}
</ul>
