<h2 class="form-header">Liste des recettes</h2>

<div class="allall">
<ul>
  {{#each recipe}}
  <div class="eachrecipe">
  <li>
    <div class="container-recipe">

    <div >
      <a href="/recipes/recipe-detail/{{this._id}}"><img
          class="imgcat"
          src="{{this.image}}"
          alt="image-recette"
        /></a>
    </div>

    <div class="tab-mini">
      <ul>
        <li class="title-liste"><h2>{{this.title}}</h2></li>
        <li class="critere"><i class="far fa-clock"></i> {{this.duration}} minutes</li>
        <li class="critere"><i class="fas fa-euro-sign"></i> {{this.price}}</li>
        <li class="critere"><i class="fas fa-sort-amount-up"></i>Difficult√© {{this.level}}</li>
        <li class="lastli"><a class="btnsmall" href="/recipes/recipe-detail/{{this._id}}">Voir la recette</a></li>
    </ul>
  </div>

  </li>
  </div>
  {{/each}}
</ul>
</div>
