<h2>List des recettes/tips</h2>

<div class="allcontainers">
{{#each recipe}}
  <div class="container-recipe">

    <div >
      <a href="www.coin.com"><img
          class="imgcat"
          src="{{this.image}}"
          alt="image-recette"
        /></a>
    </div>

    <div class="tab-mini">
      <ul>
        <li><h2>{{this.title}}</h2></li>
        <li><i class="far fa-clock"></i> {{this.duration}} minutes</li>
        <li><i class="fas fa-euro-sign"></i> {{this.price}}</li>
        <li><i class="fas fa-sort-amount-up"></i>Difficult√© {{this.level}}</li>
        <li><a href="/recipes/recipe-detail/{{this._id}}">Voir la recette</a></li>
    </ul>
  </div>
{{/each}}
</div>